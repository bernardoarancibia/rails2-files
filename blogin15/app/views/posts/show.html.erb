<h1><%= @post.title %></h1>
<div class="entry">
  <%= @post.body %>
</div>

<p>
<%= link_to "Back", posts_path %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>By: <strong><%= comment.author %></strong></p>
  <div class="comment">
    <%= comment.body %>
  </div>
  <p>
    <%= link_to "Delete", [@post, comment],
      :confirm => "Are you sure?", :method => :delete %>
  </p>
    <hr />
<% end -%>

<% form_for [@post, Comment.new] do |f| -%>
  <%= f.error_messages %>
  <p>
    <%= f.label :author, "Name:" %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body, "Your Comment:" %><br />
    <%= f.text_area :body %>
  </p>
  <%= f.submit "Post!" %>
<% end -%>
